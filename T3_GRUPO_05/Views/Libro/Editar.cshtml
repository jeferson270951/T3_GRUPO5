@model T3_GRUPO_05.Models.Libro
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-image: linear-gradient(to bottom right, #FCCE32, #FF2B5B);
        font-family: Roboto;
    }
</style>

<form method="post" asp-action="Editar" style="text-align:center;">
    <div class="border p-3" style="box-shadow: 4px 4px 10px 0px black; background-color:white;border-radius:30px; margin-top:30px">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 style="color:black; font-weight:900">Editar libro</h2>
        </div>
        <br />
        <div class="container" style="margin: 0% 25%">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Titulo" class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ingrese título" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Autor" class="form-label">Autor</label>
                    <input asp-for="Autor" class="form-control" placeholder="Ingrese autor" />
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Tema" class="form-label">Tema</label>
                    <input asp-for="Tema" class="form-control" placeholder="Ingrese tema" />
                    <span asp-validation-for="Tema" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Editorial" class="form-label">Editorial</label>
                    <input asp-for="Editorial" class="form-control" placeholder="Ingrese editorial" />
                    <span asp-validation-for="Editorial" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="AnioPublicacion" class="form-label">Año de publicación</label>
                    <input asp-for="AnioPublicacion" class="form-control" placeholder="Ingrese año de publicación" />
                    <span asp-validation-for="AnioPublicacion" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Paginas" class="form-label">Páginas</label>
                    <input asp-for="Paginas" class="form-control" placeholder="Ingrese cantidad de páginas" />
                    <span asp-validation-for="Paginas" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Categoria" class="form-label">Categoría</label>
                    <input asp-for="Categoria" class="form-control" placeholder="Ingrese categoría" />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="d-grid gap-2 d-md-block" style="margin-right:50%">

                <button type="submit" class="btn btn-primary" style="border-radius:30px;">Actualizar</button>
                <a asp-controller="Libro" asp-action="Index" class="btn btn-primary" style="background-color:#33B117; border-radius:30px; border-color: #33B117">Regresar</a>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


